@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
	ViewData["Title"] = "All Rooms";
}

@model IEnumerable<DeskEntity.Model.Room>

<style>
	.bnav,
	.bnav:after,
	.bnav:before {
		background: #ffffff;
		border-radius: 1px;
		content: "";
		cursor: pointer;
		display: block;
		height: 3px;
		transition: background 0.1s ease-in-out, color 0.1s ease-in-out;
		width: 24px;
	}

	.bnav {
		position: relative;
	}

		.bnav:before {
			position: absolute;
			top: -7.5px;
			width: 24px;
		}

		.bnav:after {
			bottom: -7.5px;
			position: absolute;
			width: 16px;
		}

	.bnav-right,
	.bnav-right:after,
	.bnav-right:before {
		right: 0;
	}

	#logout_sidebar_button {
		position: absolute;
		display: inline-block;
		bottom: 0;
	}

		#logout_sidebar_button:hover {
			color: red;
		}

	.card {
		width: 300px;
		/*height: 200px;*/
		background-color: #fff;
		box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
		border-radius: 5px;
		overflow: hidden;
	}

		.card img {
			width: 100%;
			height: 200px;
			object-fit: cover;
		}

	.card-content {
		padding: 20px;
	}

	.card-title {
		font-family: 'Roboto','sans-serif';
		font-size: 16px;
		font-weight: bold;
		margin-bottom: 10px;
	}

	.card-description {
		font-size: 16px;
		line-height: 1.5;
		margin-bottom: 5px;
	}

	.card-button {
		font-family: 'Roboto','sans-serif';
		display: block;
		width: 100%;
		padding: 10px;
		background-color: #000;
		color: #fff;
		text-align: center;
		text-decoration: none;
		border-radius: 5px;
	}

		.card-button:hover {
			background-color: #615f5f;
			color: #fff;
		}

	.card-btn {
		font-family: 'Roboto','sans-serif';
		background-color: #ffffff00;
		font-size: 24px;
		color: #fff;
		text-decoration: none;
	}

</style>

<body style="background: -webkit-linear-gradient(left, #fff, #000);">
	<div>
		<div id="mySidebar" class="sidebar">
			<a class="closebtn" onclick="closeNav()">×</a>
			<h3 id="stitle" class="text-white text-center">Admin</h3>
			<a asp-controller="Admin" asp-action="Index">Dashboard</a>

			<a id="logout_sidebar_button" class="nav nav-sidebar" href="#">Log Out</a>
		</div>
	</div>

	<h1 class="text-center text-white my-4"> All Room Details</h1>

	<div>
		<a asp-controller="Admin" asp-action="AddRoom">Add New Room</a>
	</div>

	<div class="row">
		<div class="col-12 ">
			<h3>Rooms</h3>
			<hr />
			<table class="table table-light table-bordered table-hover">
				<thead>
					<tr>
						<th>RoomId</th>
						<th>Room Number</th>
						<th>Room Status</th>
						<th>FloorId</th>

						<th>Edit</th>
						<th>Delete</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var room in Model)
					{
						<tr>

							<td>@room.RoomId</td>
							<td>@room.RoomNumber</td>
							<td>@room.RStatus</td>
							<td>@room.FloorId</td>

							<td><a asp-controller="Admin" asp-action="UpdateRoom" asp-route-roomId=@room.RoomId>Edit</a></td>
							<td><a asp-controller="Admin" asp-action="DeleteRoom" asp-route-roomId=@room.RoomId>Delete</a></td>
						</tr>
					}
			</table>
		</div>

	</div>
</body>



